<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--
    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    -->

    <style name="OverlayPrimaryColorRed" parent="AppTheme">
        <item name="colorPrimary">@color/cred</item>
        <item name="colorPrimaryDark">@color/cOrange</item>
    </style>

    <style name="OverlayPrimaryColorGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cGreen</item>
        <item name="colorPrimaryDark">@color/cLime</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="OverlayPrimaryColorBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cblue</item>
        <item name="colorPrimaryDark">@color/cCyan</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="toastSuccessAddProduct">
        <item name="colorBackground">@color/cGreen</item>
        <item name="textColor">#fff</item>
        <item name="iconLeft">@drawable/ic_check_white</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">3dp</item>

    </style>

    <style name="toastErrorAddProduct">
        <item name="colorBackground">@color/cred</item>
        <item name="textColor">#fff</item>
        <item name="iconLeft">@drawable/ic_close</item>
        <item name="strokeColor">#fff</item>
        <item name="strokeWidth">3dp</item>
    </style>

</resources>
