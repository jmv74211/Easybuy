<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:id="@+id/relativeLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="23-11-2020"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="right"
                    android:text="11:14"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/dateLayout"
                android:layout_marginTop="20dp"
                android:src="@drawable/mercadona_logo"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Nombre de la lista"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/textListName"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView"
                android:src="@drawable/usrusr" />


            <TextView
                android:id="@+id/textViewParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textListName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/user_icon"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="4/10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/participantsImages1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewParticipants"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toRightOf="@id/imageView"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cblue"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant2"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cred"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant3"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cpurple"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cGreen"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cYellow"
                    app:civ_border_width="2dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/participantsImages2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/participantsImages1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toRightOf="@id/imageView"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cdarkBLue"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant7"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cOrange"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant8"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cLime"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant9"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cBrown"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/participant10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/cCyan"
                    app:civ_border_width="2dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/participantsImages2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:weightSum="10">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6">

                    <ImageView
                        android:id="@+id/cartIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/cart_green_icon" />

                    <TextView
                        android:id="@+id/textViewProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/participantsImages2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imageView"
                        android:text="5 productos" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4">

                    <ImageView
                        android:id="@+id/priceIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/coins_icon" />

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/participantsImages2"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imageView"
                        android:textColor="@color/colorAccent"
                        android:text="1€" />

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>